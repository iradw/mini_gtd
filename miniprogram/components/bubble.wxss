.body {
  width: 600rpx;
  height: 200rpx;
  border: 8rpx #5cadff solid;
  box-sizing: border-box;
  position: relative;
  z-index: 10;
  color: #5cadff;
  padding: 10rpx;
}
.body .tri {
  width: 0rpx;
  height: 0rpx;
  border-style: solid;
  border-width: 180rpx 50rpx 0 50rpx;
  border-color: #5cadff transparent transparent;
  position: absolute;
  top: 185rpx;
  left: 200rpx;
}
.body .tri .mask-tri {
  width: 0rpx;
  height: 0rpx;
  border-style: solid;
  border-width: 170rpx 40rpx 0 40rpx;
  border-color: #ffffff transparent transparent;
  position: absolute;
  top: -184rpx;
  left: -40rpx;
}
