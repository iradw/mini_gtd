page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  height: 100%;
  background: url("https://images.unsplash.com/photo-1511342655959-df3af837203e?ixlib=rb-1.2.1&auto=format&fit=crop&w=592&q=80&tdsourcetag=s_pctim_aiomsg") no-repeat;
