}
.container {
  width: 95%;
  margin: 100rpx auto;
}
.container .logo {
  display: block;
  margin: 0 auto;
  width: 200px;
  height: 200px;
  background: #bfa;
}
.container .userinfo-nickname {
  text-align: center;
  display: block;
  margin-top: 20rpx;
}
.container .explain {
  width: 70%;
  margin: 100rpx auto;
  font-size: 30rpx;
  color: #ecb726;
}
.container .login {
