<view>
    <input type="text" class="task" placeholder="在这里添加一件事" bindinput="onTaskInput" value="{{inputTask}}" />
    <button class="add-task" type="primary" bindtap='onClickAdd' disabled="{{inputTask===''?true:false}}">添加</button> 
    <view class="line"></view>
    <movable-area class="move-area">
        <movable-view wx:for='{{tasks}}' wx:key='index'  x="{{item.x}}" y="{{item.y}}"
        direction="{{item.open?'none':'all'}}" class="move-task-item" bindchange="onDrag"  data-index='{{index}}'>
            <view class="task-item" bindtap="onClickTag" style="background: {{item.tagColor}}; height: {{item.open?'250rpx':'50rpx'}}"
             data-index='{{index}}'>{{item.taskContent}}</view>
        </movable-view>
        <view class="line movable-line"></view>
        <movable-view class="task-boxes" x='110rpx' y='605rpx'>
            <image src="../../images/box.png" mode="scaleToFill"/>
            <text class="list" id="c-list">日程表</text>
        </movable-view>
        <movable-view class="task-boxes" x='325rpx' y='605rpx'>
            <image src="../../images/box.png" mode="scaleToFill"/>
            <text class="list" id="n-list">下一步</text>
        </movable-view>
        <movable-view class="task-boxes" x='540rpx' y='605rpx'>
            <image src="../../images/box.png" mode="scaleToFill"/>
            <text class="list" id="w-list">等待</text>
        </movable-view>
        <movable-view class="task-boxes" x='110rpx' y='755rpx'>
            <image src="../../images/box.png" mode="scaleToFill"/>
            <text class="list" id="p-list">计划</text>
        </movable-view>
        <movable-view class="task-boxes" x='325rpx' y='755rpx'>
            <image src="../../images/box.png" mode="scaleToFill"/>
            <text class="list" id="wish-list">愿望</text>
        </movable-view>
        <movable-view class="task-boxes" x='540rpx' y='755rpx'>
            <image src="../../images/box.png" mode="scaleToFill"/>
            <text class="list" id="r-list">参考</text>
        </movable-view>

    </movable-area>
</view>