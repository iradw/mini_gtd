/* miniprogram/pages/arrange/arrange.wxss */
page{
  height: 100%;
}
.find{
  background-color:#ffffff;
  width: 100%;
  height: 140rpx;
}
.input{
    padding-left: 10px;
    position: fixed;
    left: 40rpx;
    top: 40rpx;
    width: 500rpx;
    height: 40rpx;
    border: 2rpx solid lightslategray;
    border-radius: 50rpx}
.edit{
  position: fixed;
  right: 15rpx;
  top: 45rpx;
  width: 15%;
  height: 51rpx;
  line-height: 51rpx;
  font-size: 26rpx;
}
.allclass{
  background-color:#ffffff;
  position: fixed;
  top: 140rpx;
  bottom: 0rpx;
  left: 0rpx;
  height: 100%;
  width: 30%;
  scroll-snap-type-y: true;
  
}
.i-class{
  height:110rpx;
  box-sizing: border-box;
  line-height:110rpx;
  font-size: 33rpx;
}
.i-class image{
  height: 50rpx;
  width: 23%;
  vertical-align: middle;
  margin: 0 18rpx 0 6rpx;
}
.scroll{
  position: fixed;
  top: 140rpx;
  bottom: 0rpx;
  right: 0rpx;
  width: 70%;
  overflow-x: hidden;
}
.editCheckbox{
  position: relative;
  bottom:2rpx;
  right: 15rpx;
}
.thing{
  font: 30rpx/1;
  padding-left: 60rpx;
  padding-bottom: 10rpx;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  border-bottom: 2rpx solid #cdcdcd;
}
.classplace{
  /* width: 90%; */
  background-color:#f5f5f5;
  opacity: 0.7;
  height: 70rpx;
  margin: 0 0 10rpx 10rpx;
  /* border-radius: 20rpx 20rpx 100rpx 20rpx; */
  line-height: 70rpx;
  padding-left: 16rpx;
  padding-bottom: 10rpx;
  padding-top: 10rpx;
}
::-webkit-scrollbar  
{  
    width: 0;     
}