.mix-wrap {
  width: 80%;
  border: 2rpx solid #cdcdcd;
  border-radius: 35rpx;
  margin-bottom: 50rpx;
}
.mix-center {
  display: flex;
  flex-direction: column;
  align-items: center;
}
page {
  padding-top: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo {
  width: 80%;
  border: 2rpx solid #cdcdcd;
  border-radius: 35rpx;
  margin-bottom: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 6rpx 0;
  padding: 50rpx 0;
}
.userinfo .avatar {
  display: block;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}
.userinfo .nickname {
  width: 100%;
  display: block;
  margin: 0 auto;
  text-align: center;
}
.menu-list {
  width: 80%;
  border: 2rpx solid #cdcdcd;
  border-radius: 35rpx;
  margin-bottom: 50rpx;
  padding-bottom: 20rpx;
}
.menu-list .option {
  width: 500rpx;
  margin: 10rpx auto 0 auto;
  border-bottom: 1rpx #cdcdcd solid;
}
